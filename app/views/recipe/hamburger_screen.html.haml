:scss
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        width: 100%;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: sans-serif;
        font-weight: 900;
    }

    h1 {
        font-size: 2rem;
    }

    a {
        text-decoration: none;
        
        color: white;
    }

    article {
        width: 80%;
        
        margin: 1rem auto;
        
        overflow: hidden;
    }

    header {
        background: black;
        color: white;
        width: 100%;
    }

    img {
        margin: 2rem auto;
        
        max-height: 50vh;
        width: 100%;
        
        object-fit: cover;
        
        border-radius: 1rem;
    }

    button {
        appearance: none;
        -webkit-appearance: none;

        background: none;

        border: none;
    }

    .md-button {
        appearance: none;
        -webkit-appearance: none;
        
        background: black;
        
        color: white;
        
        box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 
                    0 1px 5px 0 rgba(0, 0, 0, 0.12), 
                    0 3px 1px -2px rgba(0, 0, 0, 0.2);
                    
        font-size: 14px;
        display: inline-block;
        height: 36px;
        min-width: 88px;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -ms-touch-action: manipulation;
        touch-action: manipulation;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        border:0;
        border-radius: 2px;
        outline:0;
        padding: 0;
        
        display: block;
        
        width: 80%;
        
        margin: 0 auto;
    }
    
    .md-button a {
        display: block;
        
        margin: 6px 16px;
    }

    #hamburger-menu {
        display: inline-block;

        margin: 1rem;
        margin-left: 2rem;
        margin-right: 1.5rem;
    }
    
    #navigation-title
    {
        display: inline-block;
    }
    
    #icon-panel
    {
        display: inline-block;

        float: right;

        margin: 1rem;
        margin-right: 2rem;
    }

    #icon-panel i {
        margin-left: 0.5rem;
    }


    #hamburger-side-menu {
        width: 100vw;
        height: 100vh;

        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;

        background: rgba(0, 0, 0, 0.2);
    }

    .hamburger-side-menu-list-container {
        position: absolute;
        
        padding: 0 40px;

        background: white;

        max-width: 304px;

        width: 76vw;
        height: 100vh;

        box-shadow: 0px 8px 10px rgba(0, 0, 0, 0.2), 0px 6px 30px rgba(0, 0, 0, 0.12), 0px 16px 24px rgba(0, 0, 0, 0.14);
    }

    .hamburger-side-menu-list {
        list-style: none;

        margin: 2rem 0;
        padding: 0;
    }

    .hamburger-side-menu-list li {
        height: 2rem;

        margin-bottom: 1rem;
    }

    .hamburger-side-menu-list li a {
        color: black;
    }

    #hamburger-menu-exit-action {
        position: absolute;

        color: black;

        top: 1.5rem;
        right: 1.5rem;

        font-size: 1.5rem;
    }

    .hamburger-side-menu-avatar {
        width: 2rem;
        height: 2rem;

        margin: 2rem 0 1rem 0;
    }

    .hamburger-side-menu-avatar img {
        margin: 0;
    }

    hr {
        color: ghostwhite;
        border-color: ghostwhite;
        opacity: 0.5;
    }
    

%nav#hamburger-side-menu
    %div.hamburger-side-menu-list-container
        %a#hamburger-menu-exit-action{:href => "/recipe/start_screen"}
            %i.fas.fa-times
        .hamburger-side-menu-avatar
            %img{:src => "https://images.unsplash.com/photo-1512258068790-2135b2d44a36?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1600&q=80"}
        %h3 How to Prepare Cereal
        %hr
        %ul.hamburger-side-menu-list
            %li
                %a{:href => "/recipe/step1_screen"}
                    Step 1
            %li
                %a{:href => "/recipe/step2_screen"}
                    Step 2
            %li
                %a{:href => "/recipe/step3_screen"}
                    Step 3
%header#navigation-bar-top
    %div#hamburger-menu
        %a{:href => "/recipe/hamburger/hamburger_screen"}
            %i.fas.fa-bars
    %div#navigation-title 
        Welcome
    %div#icon-panel
        %i.fas.fa-question-circle
%main
    %section
        %article
            %h1 How to Prepare Cereal
            %img(src="https://images.unsplash.com/photo-1521483451569-e33803c0330c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1577&q=80")
            %button.md-button
                %a{:href => "./step1_screen"}
                    START
